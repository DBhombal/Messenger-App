<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color for sent messages -->
    <solid android:color="#4CAF50" /> <!-- Change this to your desired color -->

    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="#388E3C" /> <!-- Change this to your desired border color -->

    <!-- Corner radius for a rounded rectangle shape -->
    <corners
        android:topRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"/>

    <!-- Padding for the content inside the bubble -->
    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp" />

</shape>

